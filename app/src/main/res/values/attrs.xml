<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义的TextView的属性-->
    <declare-styleable name="_TextView">
        <!-- 自定义Text的内容 -->
        <attr name="_text" format="string" />
        <!-- 自定义Text的内容文字大小 -->
        <attr name="_textSize" format="dimension" />
        <!-- 自定义Text的内容文字颜色 -->
        <attr name="_textColor" format="color" />
        <!-- 自定义Text的内容文字最大长度 -->
        <attr name="_maxLength" format="integer" />
        <!-- 自定义Text的背景，可以是图片资源、颜色,一般背景都是view管理的可注释掉 -->
     <!--   <attr name="_background" format="reference|color" />-->
        <attr name="_textPaddingTopSize" format="dimension" />
        <attr name="_textPaddingBottomSize" format="dimension" />
        <!-- 枚举 -->
        <attr name="_inputType">
            <enum name="number" value="1" />
            <enum name="text" value="2" />
            <enum name="password" value="3" />
        </attr>
    </declare-styleable>

    <!-- qq计步效果的自定义属性-->
    <declare-styleable name="QQStepView">
        <attr name="outterColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextColor" format="color" />
        <attr name="stepTextSize" format="dimension" />
    </declare-styleable>
</resources>
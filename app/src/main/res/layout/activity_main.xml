<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xiaobai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.xiaowei.xiaobai.view.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:paddingLeft="9dp"
        xiaobai:_text="贝塞尔曲线 - 花束直播点赞效果。"
        xiaobai:_textColor="@color/black"
        xiaobai:_textPaddingBottomSize="8dp"
        xiaobai:_textPaddingTopSize="8dp" />

    <com.xiaowei.xiaobai.view.QQStepView
        android:id="@+id/step_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="33dp"
        xiaobai:borderWidth="9dp"
        xiaobai:innerColor="#982222"
        xiaobai:outterColor="#0000FF"
        android:layout_centerHorizontal="true"
        xiaobai:stepTextColor="#982222"
        xiaobai:stepTextSize="26sp" />
</RelativeLayout>